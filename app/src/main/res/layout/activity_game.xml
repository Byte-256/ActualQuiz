<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Rounded Corner Container -->

    <!-- Answer Options -->
    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_top_container"
        android:backgroundTint="#438F82"
        android:padding="24dp"
        android:paddingVertical="100dp"
        android:paddingTop="200dp">

        <!-- Pressure: Easy -->
        <TextView
            android:id="@+id/pressure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Pressure: Easy"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            tools:ignore="HardcodedText" />

        <!-- Close Icon (X) -->
        <ImageButton
            android:id="@+id/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:importantForAccessibility="no"
            app:tint="#FFFFFF" />

        <!-- Question Label -->
        <TextView
            android:id="@+id/question_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pressure_text"
            android:layout_marginTop="16dp"
            android:text="Question:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <!-- Question Text -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_label"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />
    </RelativeLayout>

    <!-- Answer Spaces   -->
    <GridLayout
        android:id="@+id/answerGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/top_container"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:columnCount="6"
        android:foregroundGravity="center_horizontal"/>

    <!-- Letter Choices -->
    <GridLayout
        android:id="@+id/letterGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answerGrid"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:columnCount="6"
        android:foregroundGravity="center_horizontal"
        android:orientation="horizontal"/>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="24dp">

        <!-- Next Button -->
        <Button
            android:id="@+id/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#438F82"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingEnd="32dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="12dp"
            android:text="Next"
            android:textColor="#FFFFFF"
            tools:ignore="ButtonStyle,HardcodedText" />

        <!-- Clear Button -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#438F82"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingEnd="32dp"
            android:paddingBottom="12dp"
            android:text="Clear"
            android:textColor="#FFFFFF"
            tools:ignore="ButtonStyle,HardcodedText" />

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#438F82"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingEnd="32dp"
            android:paddingBottom="12dp"
            android:text="Skip"
            android:textColor="#FFFFFF"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>

</RelativeLayout>